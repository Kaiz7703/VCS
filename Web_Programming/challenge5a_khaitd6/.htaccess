# Bật chế độ RewriteEngine để dùng URL đẹp
RewriteEngine On

# Tự động chuyển hướng từ HTTP sang HTTPS (nếu cần)
# RewriteCond %{HTTPS} !=on
# RewriteRule ^ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Viết lại URL cho trang chính (Ví dụ: /dashboard thay vì /views/dashboard.php)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^([a-zA-Z0-9_-]+)$ views/$1.php [L,QSA]

# Chặn truy cập trực tiếp vào thư mục config (bảo mật file database.php)
<Directory "/config">
    Order Deny,Allow
    Deny from all
</Directory>

# Chặn truy cập trực tiếp vào các file quan trọng
<FilesMatch "(config\.php|database\.php|\.htaccess)">
    Order Deny,Allow
    Deny from all
</FilesMatch>

# Chặn truy cập vào thư mục uploads để tránh lộ file
<Directory "/uploads">
    Options -Indexes
</Directory>

# Giới hạn kích thước file upload (10MB)
php_value upload_max_filesize 10M
php_value post_max_size 12M

# Bảo vệ chống XSS & Clickjacking
Header set X-XSS-Protection "1; mode=block"
Header always append X-Frame-Options SAMEORIGIN

# Bật Keep-Alive để tăng tốc độ tải trang
Header set Connection keep-alive
